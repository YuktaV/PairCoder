{
  "name": "paircoder",
  "version": "0.2.3",
  "description": "Model Context Protocol server for efficient AI-assisted development",
  "main": "src/index.js",
  "bin": {
    "pc": "./bin/pc.js",
    "paircoder": "./bin/pc.js"
  },
  "files": [
    "bin/",
    "src/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:visual": "VISUAL_REPORT=true jest --config jest.config.js",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test:snapshot": "jest --config jest.config.js snapshot.test.js",
    "test:update-snapshots": "UPDATE_SNAPSHOTS=true jest --config jest.config.js snapshot.test.js",
    "update-snapshots": "jest --config jest.config.js --updateSnapshot",
    "lint": "eslint --config eslint.config.mjs src/",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "webpack --config webpack.config.js"
  },
  "keywords": [
    "ai",
    "claude",
    "development",
    "context",
    "tool",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "acorn": "^8.10.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "clipboardy": "^2.3.0",
    "commander": "^11.0.0",
    "diff": "^5.1.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.5",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "semver": "^7.5.4",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "eslint": "^8.57.1",
    "globals": "^16.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
